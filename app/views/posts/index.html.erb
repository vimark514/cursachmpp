<div class="container mt-5">
  <div class="row">
    <div class="col-md-12 text-center mb-4">
      <h1>Posts</h1>
      <%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
    </div>
  </div>

  <% if @posts.any? %>
    <div class="row">
      <div class="col-md-12">
        <% @posts.each do |post| %>
          <div class="card mb-3">
            <div class="card-body">
              <h5 class="card-title"><%= link_to post.title, post_path(post) %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                Category: <%= post.category.present? ? post.category.name : 'Uncategorized' %>
              </h6>
              <p class="card-text"><%= truncate(post.content, length: 200) %></p>
              <a href="<%= post_path(post) %>" class="btn btn-primary">Read more</a>
            </div>
            <div class="card-footer text-muted">
              Posted by <%= post.user.email %> on <%= post.created_at.strftime("%B %d, %Y") %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-md-12 text-center">
        <p>There are no posts yet. Be the first to create one!</p>
        <%= link_to 'Create your first post', new_post_path, class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
