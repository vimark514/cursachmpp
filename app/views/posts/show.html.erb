<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
          <h2><%= @post.title %></h2>
        </div>
        <div class="card-body">
          <p class="card-text">
            <%= simple_format(@post.content) %>
          </p>
        </div>
        <div class="card-footer text-muted text-center">
          <p>Posted by <%= @post.user.email %> on <%= @post.created_at.strftime("%B %d, %Y") %></p>
          <%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-warning' %>
          <%= link_to 'Back to Posts', posts_path, class: 'btn btn-secondary' %>
          <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
