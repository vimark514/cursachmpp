<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-lg">
        <div class="card-header text-center bg-success text-white">
          <h2>Create New Post</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @post, local: true) do |form| %>
            <div class="form-group row mb-3">
              <%= form.label :title, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_field :title, class: "form-control", placeholder: "Enter title" %>
              </div>
            </div>

            <div class="form-group row mb-3">
              <%= form.label :content, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.text_area :content, class: "form-control", rows: 5, placeholder: "Enter content" %>
              </div>
            </div>

            <div class="form-group row mb-3">
              <%= form.label :category, class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= form.select :category_id, options_for_select(Category.all.collect { |c| [c.name, c.id] }, { include_blank: "Select a category" }), {}, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-10 offset-sm-2">
                <%= form.submit "Create Post", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
