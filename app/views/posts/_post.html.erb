<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= post.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted">Category: <%= post.category.name %></h6>
    <p class="card-text"><%= truncate(post.content, length: 200) %></p>
    <a href="<%= post_path(post) %>" class="btn btn-primary">Read more</a>
  </div>
  <div class="card-footer text-muted">
    Posted by <%= post.user.name %> on <%= post.created_at.strftime("%B %d, %Y") %>
  </div>
</div>
